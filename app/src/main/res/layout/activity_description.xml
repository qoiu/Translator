<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/description_screen_refresh_layout"
    android:layout_height="match_parent"
    tools:context=".view.DescriptionActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_layout_header"
        style="@style/Header"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_layout_transcription"
        style="@style/Header"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_layout_description"
        style="@style/Text"/>
    <com.qoiu.translator.view.SquareImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_layout_image"
        android:src="@drawable/ic_baseline_picture_in_picture_24"/>

</LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>